<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity4"
    android:background="@color/BackColor">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:onClick="ToRegistratioPage"
        android:src="@drawable/backarrow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="60dp"
        android:text="Verify your phone number"
        android:textColor="@color/Dark"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="110dp"
        android:layout_marginLeft="70dp"
        android:text="We've sent the code to"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintEnd_toStartOf="@+id/textView4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="+92 321 2242022"
        android:textColor="@color/Dark"
        android:textSize="15sp"
        android:layout_marginTop="110dp"
        android:layout_marginRight="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView4">

        <!-- 5 circles for number display -->
        <ImageView
            android:id="@+id/C1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/circle_empty" />

        <ImageView
            android:id="@+id/C2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/circle_empty" />

        <ImageView
            android:id="@+id/C3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/circle_empty" />

        <ImageView
            android:id="@+id/C4"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/circle_empty" />

        <ImageView
            android:id="@+id/C5"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/circle_empty" />
    </LinearLayout>

    <Button
        android:id="@+id/verfy"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/button_outline"
        android:onClick="GoToDashboard"
        android:text="Verfiy"
        android:textColor="@color/BackColor"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginBottom="-30dp"
        android:layout_marginRight="40dp"
        android:text="Send Code Again"
        android:textColor="@android:color/black"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/verfy"
        app:layout_constraintEnd_toEndOf="@+id/verfy"
        app:layout_constraintStart_toStartOf="@+id/verfy" />

    <TextView
        android:id="@+id/timerTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="110dp"
        android:text="00:30"
        android:textStyle="bold"
        android:textColor="@color/Dark"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/verfy" />

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:layout_height="470dp"
        android:background="@color/DesignColor"
        android:columnCount="3"
        android:rowCount="4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <Button
            android:id="@+id/button1"
            android:background="@drawable/keypad_style"
            android:layout_marginTop="50dp"
            android:layout_width="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_columnWeight="1"
            android:text="1" />

        <Button
            android:id="@+id/button2"
            android:layout_marginTop="50dp"
            android:layout_width="0dp"
            android:layout_marginRight="10dp"
            android:textSize="30sp"
            android:background="@drawable/keypad_style"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="2" />

        <Button
            android:id="@+id/button3"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="10dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:textSize="30sp"
            android:textStyle="bold"
            android:background="@drawable/keypad_style"
            android:text="3" />

        <Button
            android:id="@+id/button4"
            android:background="@drawable/keypad_style"
            android:layout_marginTop="50dp"
            android:layout_width="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_columnWeight="1"
            android:text="4" />

        <Button
            android:id="@+id/button5"
            android:layout_marginTop="50dp"
            android:layout_width="0dp"
            android:layout_marginRight="10dp"
            android:textSize="30sp"
            android:background="@drawable/keypad_style"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="5" />

        <Button
            android:id="@+id/button6"
            android:layout_marginTop="50dp"
            android:layout_width="0dp"
            android:layout_marginRight="10dp"
            android:textSize="30sp"
            android:background="@drawable/keypad_style"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="6" />

        <Button
            android:id="@+id/button7"
            android:background="@drawable/keypad_style"
            android:layout_marginTop="50dp"
            android:layout_width="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_columnWeight="1"
            android:text="7" />

        <Button
            android:id="@+id/button8"
            android:layout_marginTop="50dp"
            android:layout_width="0dp"
            android:layout_marginRight="10dp"
            android:textSize="30sp"
            android:background="@drawable/keypad_style"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="8" />

        <Button
            android:id="@+id/button9"
            android:layout_marginTop="50dp"
            android:layout_width="0dp"
            android:layout_marginRight="10dp"
            android:textSize="30sp"
            android:background="@drawable/keypad_style"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="9" />

        <Button
            android:background="@android:color/transparent"
            android:layout_marginTop="50dp"
            android:layout_width="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_columnWeight="1" />

        <Button
            android:id="@+id/button0"
            android:layout_marginTop="50dp"
            android:layout_width="0dp"
            android:layout_marginRight="10dp"
            android:textSize="30sp"
            android:background="@drawable/keypad_style"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="0" />

        <ImageView
            android:id="@+id/delete"
            android:layout_marginTop="45dp"
            android:layout_width="0dp"
            android:layout_marginRight="10dp"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_height="70dp"
            android:layout_columnWeight="1"
            android:src="@drawable/delete_icon" />
    </GridLayout>



</androidx.constraintlayout.widget.ConstraintLayout>